	text-align center
	h1
		font-family uncomfortable
		font-weight normal
		color white
		&.title
			float left
		a
			text-decoration none
			color white
			&visited, &active, &hover
				color white
	.definition
		color main_light
		display inline-block
		padding-bottom line-size
		text-align left
		.pronunciation
			color main_dark
			font-family boring
			padding-left: 1ex
		ol
			margin 0
			padding 0
			padding-left 1ex
			display inline
		li
			display inline
			color white
	footer
		overflow auto
		text-align left
		box-sizing border-box
		aside
			float left
		a.author, .logo a
			clear right
			color main_pale
			float right
			opacity .4
			text-decoration none
