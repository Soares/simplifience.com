@import fonts
@import theme
@import rules
@import helpers
@import caps
@import nav
@import content

html, body
	font text-size/line-size boring
	background main

::selection, ::-moz-selection
	background main_pale
	color white
	text-shadow none

.wrapper
	width: 90%
	margin: 0 5%

#main
	padding 30px 0
	article
		clear both
		ul, ol
			margin 0
			margin-bottom line-size
			padding-left 2.5em
			padding-right 1em
			box-sizing border-box
		blockquote
			box-sizing border-box
			font-style italic
			margin 0
			padding-left 1em
			padding-right 1em
		p.number
			font-size 10em
			line-height 2em
			text-align center
		p.stylized
			font-family exciting
			font-size 10em
			line-height 2em
			text-align center
	img
		display block
		margin 0 auto
		max-width 100%

iframe
	border 0
	margin-bottom line-size

p
	line-height line-size
	margin-bottom line-margin
	margin-top 0

aside
	padding 20px 5%
	overflow auto
	p:last-child
		margin-bottom 0
	ul, ol
		list-style none
		margin 0
		padding 0

hr.mark
	clear both
	background none
	border none

@import reactive
